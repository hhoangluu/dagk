            <br>
            <table style="width:100%; font-size: 13px; background: #f8f9fa">
                <tr>
                    <th style="width: 4%">STT</th>
                    <th style="width: 15%">Bài viết</th>
                    <th style="width: 14%">Tag</th>
                    <th style="width: 10%">Chuyên mục</th>
                    <th style="width: 9%">Ngày đăng</th>
                    <th style="width: 9%">Ngày XB</th>
                    <th style="width: 10%">Người đăng</th>
                    <th style="width: 15%">Nhận xét</th>
                    <th style="width: 13%">Thao tác</th>
                </tr>
                {{#each this.dataPost}}
                <tr>
                
                
                        <td>{{this.item}}</td>
                        <td>{{this.title}}</td>
                        <td>{{this.tag}}</td>
                        <td>{{this.category}}</td>
                        <td>{{formatDate this.date}}</td>
                        <td> <input type="date" id="{{this._id}}" class="cday" name="datepublish"></td>
                        <td>{{this.author}}</td>
                        <td>
                            <input type="text" placeholder="Viết nhận xét" name="uname" required>
                        </td>
                        <td>
                            <form action="accept" method="post" id="{{this._id}}1" >
                                <input type="hidden" name="bday" class="bday" for="{{this._id}}">
                               <input type="hidden" name="id" value="{{this._id}}">
                                <button type="submit" name="id" value="{{this._id}}" name="type" onclick="alert('Bài viết đã được duyệt!')">Duyệt</button>
                        
                                <div id="results"></div>
                            </form>
                        <form action="refuse" method="post" id="{{this._id}}2">
                              <input type="hidden" name="id" value="{{this._id}}">
                            <button type="submit" value="refuse" name="type" onclick="alert('Từ chối bài viết!')">Từ
                        </form>
                        </td>
                        <td>
                    </td>
                </tr>
                <script>
                    $(".cday").change(function () {
                        $(".bday").val($(this).val());

                    });
                </script>
                {{/each}}
                                
                                <script type="text/javascript" language="javascript">
                                    $(document).ready(function () {
                                        $("form").submit(function () {
                                            // Getting the form ID
                                            var formID = $(this).attr('id');
                                            var formDetails = $('#' + formID);
                                          //  console.log(formDetails.val().datepublish);
                                            var action = $(this).attr('action');
                                          //  alert(action);
                                            if (action === "accpet")
                                            {
                                            $.ajax({
                                                type: "POST",
                                                url: '/admin/accept',
                                                data: formDetails.serialize(),
                                                success: function (data) {
                                                    // Inserting html into the result div
                                                    $('#results').html(data);
                                                },
                                                error: function (jqXHR, text, error) {
                                                    // Displaying if there are any errors
                                                    $('#result').html(error);
                                                }
                                            });
                                            return false;

                                            }
                                            else if (action === "refuse")
                                            {
                                                $.ajax({
                                                type: "POST",
                                                url: '/admin/refuse',
                                                data: formDetails.serialize(),
                                                success: function (data) {
                                                    // Inserting html into the result div
                                                    $('#results').html(data);
                                                },
                                                error: function (jqXHR, text, error) {
                                                    // Displaying if there are any errors
                                                    $('#result').html(error);
                                                }
                                            });
                                            return false;
                                            }
                                        });
                                    });
                                </script>
                               
