        <div class="home" href="/"><a href="/" class="fa fa-home home-post">Trang chủ</a></div>
        {{#each this.categories as | item|}}
        <div class="dropdownw3">
            <button class="dropbtn category" href=""><a href="/{{xoadau item.category}}">{{ category}}</a>
